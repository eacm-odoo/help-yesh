<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_first_letter_to_client" model="mail.template">
            <field name="name">First letter to the client</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="email_from">${(object.invoice_user_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">${object.company_id.name} > ${object.project_id.name}: invoice #${object.name or 'n/a'} ${object.start_date.strftime("%B %d")} - ${object.end_date.strftime("%d, %Y")}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Hello, ${object.partner_id.name or " "} Team
        <br /><br />
Please find attached invoice # ${object.project_id.name or " "} and time report for the period ${object.start_date.strftime("%B %d")} - ${object.end_date.strftime("%d, %Y")}
        <br /><br />
Please note that invoice # ${object.project_id.name or " "} in the amount of  ${object.amount_residual or " "} is due on ${object.invoice_date_due or " "}
        <br /><br />
We greatly appreciate your timely payment. Please feel free to contact us if you have any questions about the invoice or payment details.
        <br /><br />
Thank you for your business!
    </p>
</div>
            </field>
            <field name="report_template" ref="account.account_invoices"/>
            <field name="report_name">Invoice_${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
