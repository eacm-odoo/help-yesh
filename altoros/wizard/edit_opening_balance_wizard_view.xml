    <record id="action_edit_opening_balance_form_view" model="ir.actions.act_window">
        <field name="name">Edit opening balance</field>
        <field name="res_model">edit.opening.balance</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
